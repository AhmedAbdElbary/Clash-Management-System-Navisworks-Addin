<Window x:Class="Clash_Management_System_Navisworks_Addin.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:NwControls="clr-namespace:Autodesk.Navisworks.Api.Controls;assembly=Autodesk.Navisworks.Controls"
        xmlns:local="clr-namespace:Clash_Management_System_Navisworks_Addin.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="494.3" Width="800">
    <Grid Name="WindowGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="10"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <StackPanel Name="SidebarExpandersStackPanel"
            Grid.ColumnSpan="2" 
            Grid.Column="1" 
            HorizontalAlignment="Stretch" 
            Margin="0,0,0,0" 
            Grid.Row="3" 
            Grid.RowSpan="7" 
            VerticalAlignment="Stretch" 
            Background="LightSeaGreen">
            <Expander Name="LoginExpander"
                      Grid.ColumnSpan="5" 
                      Grid.Column="0" 
                      Header="Login"
                      HorizontalAlignment="Stretch"
                      Margin="1,1,1,0"
                      Grid.Row="4" 
                      Grid.RowSpan="3"
                      VerticalAlignment="Top"
                      Height="200" 
                      IsExpanded="False" 
                      Background="MintCream"
                      Foreground="LightSlateGray"
                      FontFamily="Century Gothic, Courier New"
                      PreviewMouseUp="LoginExpander_PreviewMouseUp">
                <StackPanel>
                    <TextBlock Text="User Name"
                               Margin="5,25,5,5"/>
                    <TextBox Name="UserNameTxt"
                             Margin="5,5,5,5"
                             Text="Enter User Name.."
                             Foreground="DimGray"/>
                    <TextBlock Text="Password"
                               Margin="5,5,5,5"/>
                    <PasswordBox Name="PasswordTxt"
                             Margin="5,5,5,5"
                             Foreground="DimGray"/>
                    <Button Name="LoginBtn" 
                            Content="Login"
                            Margin="65,15,15,5"/>
                </StackPanel>
            </Expander>
            <Expander Name="SelectProjectExpander"
                      Grid.ColumnSpan="5" 
                      Grid.Column="0" 
                      Header="Project"
                      HorizontalAlignment="Stretch"
                      Margin="1,0,1,0"
                      Grid.Row="4" 
                      Grid.RowSpan="3"
                      VerticalAlignment="Top"
                      Height="25"
                      IsExpanded="False" 
                      Background="MintCream"
                      Foreground="LightSlateGray"
                      FontFamily="Century Gothic, Courier New"
                      IsEnabled="False">
                <StackPanel>
                    <TextBlock Text="Select a Project"
                               Margin="5,25,5,5"/>
                    <ComboBox Name="ProjectCbx" 
                              Text="Select a Project"
                              Margin="5,5,5,5"/>
                    <Button Name="SelectProjectBtn" 
                            Content="Ok"
                            Margin="65,15,15,5"/>
                </StackPanel>
            </Expander>
            <Expander Name="SelectClashMatrixExpander"
                      Grid.ColumnSpan="5" 
                      Grid.Column="0" 
                      Header="Clash Matrix"
                      HorizontalAlignment="Stretch"
                      Margin="1,0,1,0"
                      Grid.Row="4" 
                      Grid.RowSpan="3"
                      VerticalAlignment="Top"
                      Height="25"
                      IsExpanded="False" 
                      Background="MintCream"
                      Foreground="LightSlateGray"
                      FontFamily="Century Gothic, Courier New"
                      IsEnabled="False">
                <StackPanel>
                    <TextBlock Text="Select a Clash Matrix"
                               Margin="5,25,5,5"/>
                    <ComboBox Name="ClashMatrixCbx" 
                              Text="Select a Clash Matrix"
                              Margin="5,5,5,5"/>
                    <Button Name="SelectClashMatrixBtn" 
                            Content="Ok"
                            Margin="65,15,15,5"/>
                </StackPanel>
            </Expander>
            <Expander Name="SelectFunctionExpander"
                      Grid.ColumnSpan="5" 
                      Grid.Column="0" 
                      Header="Select Function"
                      HorizontalAlignment="Stretch"
                      Margin="1,0,1,0"
                      Grid.Row="4" 
                      Grid.RowSpan="3"
                      VerticalAlignment="Top"
                      Height="200"
                      IsExpanded="False" 
                      Background="MintCream"
                      Foreground="LightSlateGray"
                      FontFamily="Century Gothic, Courier New"
                      IsEnabled="False">
                <StackPanel>
                    <TextBlock Text="Select a Function"
                               Margin="5,25,5,5"/>
                    <RadioButton Name="FunctionClashTestsRBtn"
                                 Content="Get Clash Tests"
                                 Margin="5,5,5,5"/>
                    <RadioButton Name="FunctionSearchSetsRBtn"
                                 Content="Sync Search Sets"
                                 Margin="5,5,5,5"/>
                    <RadioButton Name="FunctionClashResultsRBtn"
                                 Content="Sync Clash Results"
                                 Margin="5,5,5,5"/>
                    <Button Name="SelectFunctionBtn" 
                            Content="Execute"
                            Margin="65,15,15,5"/>
                </StackPanel>
            </Expander>
        </StackPanel>
        <DataGrid Name="PresenterDataGrid"
            Grid.ColumnSpan="8" 
            Grid.Column="4" 
            HorizontalAlignment="Stretch" 
            Grid.Row="3" 
            Grid.RowSpan="7" 
            VerticalAlignment="Stretch"
            Background="MintCream"
            Foreground="LightSlateGray"
            FontFamily="Century Gothic, Courier New" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserSortColumns="False" MaxColumnWidth="100" MinRowHeight="38"
            >
            <DataGrid.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF68AF82" Offset="1"/>
                </LinearGradientBrush>
            </DataGrid.BorderBrush>
        </DataGrid>
        <Button Name="AboutBtn"
                Grid.ColumnSpan="1" 
                Content="About!" 
                Grid.Column="1" 
                HorizontalAlignment="Center" 
                Margin="0,0,0,0"
                Grid.Row="11" 
                Width="70"
                VerticalAlignment="Center" 
                Background="MintCream"
                Foreground="LightSlateGray"
                FontFamily="Century Gothic, Courier New"
                />
        <Button Name="HelpDeskBtn"
                Grid.ColumnSpan="1" 
                Content="Help Desk" 
                Grid.Column="2" 
                HorizontalAlignment="Center" 
                Margin="0,0,0,0"
                Grid.Row="11" 
                Width="70"
                VerticalAlignment="Center" 
                Background="MintCream"
                Foreground="LightSlateGray"
                FontFamily="Century Gothic, Courier New"
                />
        <Button Name="HelpFileBtn"
                Grid.ColumnSpan="1" 
                Content="Help File" 
                Grid.Column="4" 
                HorizontalAlignment="Center" 
                Margin="0,0,0,0"
                Grid.Row="11" 
                Width="70"
                VerticalAlignment="Center" 
                Background="MintCream"
                Foreground="LightSlateGray"
                FontFamily="Century Gothic, Courier New"
                />
        <Button Name="Run"
                Grid.ColumnSpan="2" 
                Content="Run" 
                Grid.Column="10" 
                HorizontalAlignment="Center" 
                Margin="0,0,0,0"
                Grid.Row="11" 
                Width="80"
                VerticalAlignment="Center" 
                Background="MintCream"
                Foreground="LightSlateGray"
                FontFamily="Century Gothic, Courier New"
                
                />


    </Grid>
</Window>
